{
  "name": "@neumaennl/blerf",
  "version": "0.0.11",
  "description": "Build tool for nodejs monorepos working alongside npm. Helps manage multiple projects in a solution.",
  "author": "andersnm",
  "contributors": ["neumaennl"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neumaennl/blerf.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "bin": {
    "blerf": "lib/index.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc"
  },
  "devDependencies": {
    "@types/node": "^10.12.7",
    "typescript": "^3.3.1"
  },
  "dependencies": {
    "fast-glob": "^3.2.11",
    "stringify-package": "^1.0.0",
    "tar": "^6.1.11",
    "istanbul-lib-coverage": "^3.2.0",
    "istanbul-lib-report": "^3.0.0",
    "istanbul-lib-source-maps": "^4.0.1",
    "istanbul-reports": "^3.1.5",
    "semver": "^6.0.0",
    "source-map-resolve": "^0.5.2",
    "source-map": "^0.7.3",
    "ssri": "^9.0.1",
    "v8-to-istanbul": "^2.0.4"
  },
  "blerf": {
    "steps": [
      {
        "outPath": "lib/**/*.js",
        "srcPath": [
          "src/**/*.ts",
          "tsconfig.json",
          "package.json"
        ],
        "script": "tsc"
      }
    ]
  }
}
